# ===========================================
# Root .env – used by docker-compose only
# ===========================================
# Copy to .env and set values. Backend and frontend have their own .env.example.

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/database_name
# Or separate vars:
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=postgres
# DB_PASSWORD=
# DB_NAME=pos_system

# JWT – REQUIRED. Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=
JWT_REFRESH_SECRET=

# CORS – frontend origin allowed by backend
CORS_ORIGIN=https://iphonecenter.logozodev.com

# API URL baked into frontend at build time (same domain)
VITE_API_URL=https://iphonecenter.logozodev.com
